---
import Layout from '@layouts/Layout.astro'

const navigationLinks = [
  { route: 'posts/1', label: 'Post 1' },
  { route: 'posts/2', label: 'Post 2' },
  { route: 'posts/3', label: 'Post 3' },
]
---

<Layout title='Posts | Fentos Astro'>
  <main>
    <h1>Welcome to <span>Posts Index</span></h1>
    <div class='grid'>{navigationLinks.map(({ route, label }) => <a href={route}>{label}</a>)}</div>
  </main>
</Layout>

<style lang='scss'>
  h1 {
    font-size: 3rem;
  }
  .grid {
    display: flex;
    gap: var(--size-spacing-2);
    justify-content: center;
    a {
      padding: 1rem 2rem;
      background-color: var(--color-main-1);
      color: #fff;
      font-weight: 600;
      border-radius: 0.5rem;
      &:hover {
        filter: brightness(0.8);
      }
    }
  }
</style>
